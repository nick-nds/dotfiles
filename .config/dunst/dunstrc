# Set different timeouts based on urgency - Gruvbox color scheme
[urgency_low]
    background = "#282828"
    foreground = "#a89984"
    highlight = "#b8bb26"
    frame_color = "#83a598"
    timeout = 5

[urgency_normal]
    background = "#282828"
    foreground = "#ebdbb2"
    highlight = "#fabd2f"
    frame_color = "#fe8019"
    timeout = 10

[urgency_critical]
    background = "#282828"
    foreground = "#fb4934"
    frame_color = "#cc241d"
    highlight = "#fb4934"
    timeout = 0
    icon = dialog-warning